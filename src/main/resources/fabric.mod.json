{
  "schemaVersion": 1,
  "id": "justpolydrawers",
  "version": "${version}",

  "name": "Just Poly Drawers",
  "description": "PolyFactory's containers forked into its own mod, with more features.",
  "authors": [
    "nulldawg",
    "Patbox"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/PolyFactory"
  },

  "license": "LGPLv3",
  "icon": "assets/justpolydrawers/textures/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "eu.pb4.justpolydrawers.ModInit"
    ],
    "fabric-datagen": [
      "eu.pb4.justpolydrawers.datagen.DataGenInit"
    ]
  },
  "mixins": [
    "justpolydrawers.mixins.json",
    "factorytools.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.20",
    "fabric-api": "*",
    "minecraft": "1.20.2",
    "polymer-core": ">=0.6.0",
    "polymer-resource-pack": ">=0.6.0",
    "polymer-virtual-entity": ">=0.6.0",
    "java": ">=17"
  },
  "breaks": {
    "banner": "*",
    "cardboard": "*"
  }
}
